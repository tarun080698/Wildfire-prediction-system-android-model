<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.Design.Light.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:orientation="vertical"
    tools:context=".ProfileData">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/please_update_your_profile"
        android:textColor="@color/update_profile_text_color"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/user_pic"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_name"
            android:contentDescription="@string/user_photo"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal_information"
            android:textColor="@color/black"
            android:textColorHint="#838080"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:autofillHints=""
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="#838080"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="#838080"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/user_occupation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/occupation"
                android:inputType="textCapCharacters"
                android:textColor="@color/black"
                android:textColorHint="#838080"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/address"
            android:textColor="@color/black"
            android:textColorHint="#838080"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:cardElevation="4dp">-->

        <!--            <fragment-->
        <!--                android:id="@+id/autocomplete_fragment"-->
        <!--                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content" />-->
        <!--        </androidx.cardview.widget.CardView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:weightSum="3">

            <EditText
                android:id="@+id/plot_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/plot_number"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="#838080"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/lane"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:autofillHints=""
                android:hint="@string/lane"
                android:inputType="textCapCharacters"
                android:textColor="@color/black"
                android:textColorHint="#838080"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:weightSum="3">

            <EditText
                android:id="@+id/locality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/locality"
                android:inputType="textPostalAddress|textMultiLine"
                android:textColor="@color/black"
                android:textColorHint="#838080"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/user_pin_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/pin_code"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="#838080"
                android:textSize="20sp" />

            <AutoCompleteTextView
                android:id="@+id/user_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/city"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#838080"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:weightSum="2">

            <AutoCompleteTextView
                android:id="@+id/user_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/state"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#838080"
                android:textSize="20sp" />

            <AutoCompleteTextView
                android:id="@+id/user_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/country"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#838080"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonSave"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:elevation="8dp"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="#5F2020"
            android:textSize="25sp" />

    </LinearLayout>
</LinearLayout>